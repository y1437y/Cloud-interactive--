<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.cloudinteractivehayden" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/White</item>
        <item name="colorOnPrimary">@color/Black</item>
        <item name="toolbarStyle">@style/MyToolbarStyle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/LightGreen</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/MyActionBar</item>
    </style>

    <style name="MyToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/Black</item>
        <item name="android:fontFamily">@font/barlow</item>
    </style>

    <style name="MyActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/Black</item>
        <item name="android:fontFamily">@font/barlow</item>
    </style>
</resources>